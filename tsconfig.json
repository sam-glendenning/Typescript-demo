{
  "compilerOptions": {
    "target": "es5",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "rootDir": "src",
    "outDir": "public/js",
    "moduleResolution": "node",
  },
  "include": [
    "src**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}